<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:paddingTop="60dp"
        android:paddingBottom="40dp">

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to EDUVIA St."
            android:textColor="#666666"
            android:textSize="15sp"
            android:fontFamily="@font/inter"
            android:layout_marginBottom="24dp"
            android:gravity="start" />

        <!-- Illustration (takes flexible space) -->
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/illustration1"
            android:layout_marginBottom="36dp" />

        <!-- Texts and Button Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your smart companion for Learning life."
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="start"
                android:fontFamily="@font/inter_bold"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/subText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Access all your school / tuitions updates, classes, and performance in one place."
                android:textColor="#555555"
                android:textSize="14sp"
                android:gravity="start"
                android:lineSpacingExtra="2dp"
                android:fontFamily="@font/inter_medium"
                android:layout_marginBottom="40dp" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="#000000"
                android:fontFamily="@font/inter_semibold"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
